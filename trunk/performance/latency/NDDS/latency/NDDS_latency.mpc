project(NDDS_Latency_Pub): nddsexe {
  exename   = publisher
  libs     += Stats
  after    += Stats
  includes += $(STATS_ROOT)
  
  NDDSTypeSupport_Files {
    latency.idl
  }

  Source_Files {
    publisher.cxx
    latency.cxx
    latencyPlugin.cxx
    latencySupport.cxx
  }

  Header_Files {
    GlobalSettings.h
    latency.h
    latencyPlugin.h
    latencySupport.h
  }
}

